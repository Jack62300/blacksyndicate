{% extends 'base.html.twig' %}

{% block title %}Actualiter Black Syndicate{% endblock %}

{% block body %}
  <div class="container">

        <!-- Page Heading -->
        <h1 class="mt-4 mb-3">Actualiter
        </h1>

        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('index') }}">Acceuil</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#">{{app.request.attributes.get("_route")}}</a>
            </li>
            <li class="breadcrumb-item active">{{ news.title }}</li>
        </ol>
   <div class="row"  style="padding: 32px;">

            <div class="col-md-6">
                <img class="img-fluid" src="{{ asset('img/announce.jpg') }}" style="border-radius: 5px;" alt="images annonce Black Syndicate">
            </div>

            <div class="col-md-6">
                <h3 class="my-3">{{ news.title|upper }} - Par {{ news.auteur|upper }} - Le : {{ news.createdAt|date('d/m/Y') }}
                  <span class="badge badge-{{ news.categorie }}">
                           {% if news.categorie == 'info' %}
                            Actualiter
                            {% elseif news.categorie ==  'warning' %}
                            Correction de Bug
                            {% elseif news.categorie == 'danger' %}
                            Patchnote
                            {% elseif news.categorie == 'success' %}
                            Mise Ã  Jour
                            {% else %}
                            N/B
                            {% endif %} 
                            </span>
                </h3>
                {{ news.contenueLong }}
            </div>

        </div>
    </div>
{% endblock %}